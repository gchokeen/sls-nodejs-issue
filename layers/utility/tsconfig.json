{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "dist/types",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "dist/.",
        "sourceMap": false,
        "target": "esnext",
        "baseUrl": "src",
        "paths": {
            "utility/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}